<atlas:SchemaSet 
  xmlns:atlas="http://atlasmap.io/xml/schemaset/v2" 
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:cus="it.redhat.atlasmap/customer">

  <xs:schema targetNamespace="it.redhat.atlasmap/env" xmlns="it.redhat.atlasmap/env">
    <xs:element name="envelop">
      <xs:complexType>
        <xs:sequence>
          <xs:element ref="cus:customer" />
        </xs:sequence>
      </xs:complexType>
    </xs:element>
  </xs:schema>
    
  <atlas:AdditionalSchemas>
    <xs:schema targetNamespace="it.redhat.atlasmap/customer">
      <xs:element name="customer">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="name" type="xs:string" />
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:schema>
  </atlas:AdditionalSchemas>

</atlas:SchemaSet>